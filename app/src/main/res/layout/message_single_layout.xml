<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_single_avatar"
            android:layout_width="40dp"
            android:visibility="gone"
            android:layout_height="40dp"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/message_single_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/message_single_avatar"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/message_single_avatar"
            android:background="@drawable/message_text_background_white"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:text="Custom Message"
            android:textAlignment="textStart"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message_single_text_alt_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:background="@drawable/message_text_background"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="Custom Message"
                android:visibility="gone"
                android:textAlignment="textStart"
                android:textColor="@color/whiteText" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

