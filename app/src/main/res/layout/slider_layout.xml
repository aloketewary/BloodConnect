<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:srcCompat="@drawable/food_icon" />

    <TextView
        android:id="@+id/slide_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/slide_images"
        android:layout_marginTop="40dp"
        android:text="@string/onboard_first_slide_header_text"
        android:textAlignment="center"
        android:fontFamily="@font/raleway_regular"
        android:textColor="@color/lightOrange"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/slide_desc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/slide_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/onboard_first_slide_header_text"
        android:textAlignment="center"
        android:textColor="@color/lightOrange"
        android:textSize="20sp" />
</RelativeLayout>